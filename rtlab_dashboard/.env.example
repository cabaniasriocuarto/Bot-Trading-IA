AUTH_SECRET=replace-with-a-strong-random-secret-at-least-32-chars
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-admin-password
VIEWER_USERNAME=viewer
VIEWER_PASSWORD=change-viewer-password

# Front funcional sin backend (demo/desarrollo)
USE_MOCK_API=true

# Front con backend real (Railway/VPS). Si USE_MOCK_API=false, debe estar definido.
BACKEND_API_URL=https://your-service.up.railway.app

# Si el backend cae, usar mock automaticamente (recomendado true para demo).
ENABLE_MOCK_FALLBACK_ON_BACKEND_ERROR=true

# Opcional para mostrar URL en UI/diagnostico
NEXT_PUBLIC_BACKEND_URL=https://your-service.up.railway.app
